@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me for more</button>
<br />

@if (currentCount > 3)
{
    <p>You win!</p>
}
<br />

<button class="btn btn-primary" @onclick="() => currentCount++">Click me for 1</button>

<input @onchange="InputChanged" />
<p>@message</p>

data-binding
<button @onclick="() => {message = string.Empty; text = message;}">Clear</button>
<br />

<input @bind="text" ontimeupdate="() => @text = ontimeupdate"/>
@* <p @bind-value>@text</p> *@
<br />

<label>Name = @text</label>
<input @bind-value=text />
<br />

<label>Name = @Name</label>
<input @bind-value=Name />
<label>Date of birth = @DateOfBirth?.ToString("MMMM d, yyyy")</label>
<input @bind-value=DateOfBirth @bind-value:format="yyyy-MM-dd" />

@code
{
    private string Name;
    private DateTime? DateOfBirth;
    private decimal? BankBalance;
}




@code {
    string text = "";
}

@code {
    string message = "";

    void InputChanged(ChangeEventArgs e)
    {
        message = (string)e.Value;
    }
}


@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

}


