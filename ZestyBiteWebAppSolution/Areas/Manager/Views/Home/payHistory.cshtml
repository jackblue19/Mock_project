    }

    .invoice-table tfoot {
        background-color: #f9f9f9;
        font-weight: bold;
    }

    .summary-section .totals {
        background: #f4f4f4;
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
    }

    .totals p {
        font-size: 15px;
        display: flex;
        justify-content: space-between;
