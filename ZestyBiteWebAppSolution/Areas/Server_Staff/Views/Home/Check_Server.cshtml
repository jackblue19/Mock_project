    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 200) { // Điều kiện cuộn xuống
                if ($('.navbar-collapse').hasClass('show')) {
                    $('.navbar-collapse').removeClass('show'); // Đóng navbar mà không thay đổi giao diện
                }
            }
        });
    </script>
    <script>
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.ftco-navbar-light');
            if (window.scrollY > 50) { // Thay đổi giá trị 50 tùy theo nhu cầu
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

    </script>

