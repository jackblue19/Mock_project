        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="@Url.Action("ViewProfile", "Account")">View Profile</a>
            <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")">Change password</a>
            <a class="dropdown-item" href="@Url.Action("LogOut", "Account")">Log Out</a>
        </div>
    </li>

    <li class="nav-item d-lg-none">
        <a class="nav-link" href="@Url.Action("ViewProfile", "Account")">View Profile</a>
    </li>
    <li class="nav-item d-lg-none">
        <a class="nav-link" href="@Url.Action("ChangePassword", "Account")">Change Password</a>
    </li>
    <li class="nav-item d-lg-none">
        <a class="nav-link" href="@Url.Action("LogOut", "Account")">Log Out</a>
    </li>
} else {
    <li class="nav-item dropdown d-none d-lg-block">
        <a class="nav-link custom-nav-link" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="transform: translateY(5px); text-align: center;">
            <i class="fas fa-user" style="margin-right: 5px;"></i>
            <span class="username">UserName</span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <a class="dropdown-item" href="@Url.Action("Register", "Account")">Register</a>
            <a class="dropdown-item" href="@Url.Action("LogIn", "Account")">Login</a>
        </div>
