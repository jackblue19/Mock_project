@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/EditProfile.css" rel="stylesheet" />

<div class="container form-config">
    <div class="row no-gutters row-bordered row-border-light" style="padding: 100px">
        <div class="col-12 col-md-9 text-primary">
            <div class="card-body pb-2">
                <div class="form-group">
                    <label class="form-label">Current password</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label">New password</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="form-label">Repeat new password</label>
                    <input type="password" class="form-control" />
                </div>
                <div class="text-right mt-3">
                    <button type="button" class="btn btn-primary" onclick="showSuccessAlert()">Save changes</button>&nbsp;
                    <button type="button" class="btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>