 @{
    ViewBag.Title = "VerifyEmail";
     Layout = "~/Views/Shared/_Layout.cshtml";
 }
 @model ZestyBiteWebAppSolution.Models.DTOs.VerifyEmailDTO

 <link href="~/css/signin.css" rel="stylesheet" />

 <div class="form-config">
     <div class="media d-block services form-top" style="margin-top: 25%">
         <div class="icon d-flex justify-content-center align-items-center mb-5">
             <span class="flaticon-pizza-1"></span>
         </div>
     </div>
     <div class="form-bot">
         <div style="padding-top: 30px; width: 400px">
             <h3 class="mb-8" style="text-align: center; margin-bottom: 2rem !important">Verify Email</h3>
             <form asp-action="VerifyEmail" method="post" id="signin">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="d-md-flex">
                     <div class="form-group">
                         <input asp-for="Email" class="form-control" placeholder="Email"
                                required>
                         <span asp-validation-for="Email" class="text-danger"></span>
                     </div>
                 </div>

                 <div class="form-group n-btn">
                     <input type="submit" value="Verify" class="btn btn-primary py-3 px-4">
                 </div>
             </form>
         </div>
     </div>
     <div class="text-center mt-2">
         <a asp-controller="Account" asp-action="Login" class="text-decoration-none mt-3">Back to SignIn</a>
     </div>
 </div>
 @section Scripts {
     @{
         await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
     }
 }
 