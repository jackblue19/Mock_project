@model ZestyBiteWebAppSolution.Models.DTOs.CheckoutDTO

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Checkout</title>
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
</head>

<body>
    <main id="main" role="main">
        <section id="checkout-container">
            <div class="container">
                <div class="py-5 text-center">
                    <i class="fa fa-credit-card fa-3x text-primary"></i>
                    <h2 class="my-3" style="transform:translateY(50px); color: orange">Checkout form</h2>
                </div>
                <div class="row py-5">
                    <!-- Cart Summary -->
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Your cart</span>
                            <span class="badge badge-secondary badge-pill">@Model.Items.Count</span>
                        </h4>
                        <ul class="list-group mb-3">
                            @foreach (var item in Model.Items) {
                                <li class="list-group-item d-flex justify-content-between lh-condensed">
                                    <div>
                                        <h6 class="my-0">@item.Name</h6>
                                        <small class="text-muted">Quantity: @item.Quantity</small>
                                    </div>
                                    <span class="text-muted">@item.Price.ToString()</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total (USD)</span>
                                <strong>@Model.TotalAmount.ToString()</strong>
                            </li>
                        </ul>
                    </div>

                    <!-- Billing Information -->
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Billing address</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">FullName</label>
                                <input type="text" class="form-control" name="FullName" required>
                                <div class="invalid-feedback">
                                    Valid fullname is required.
                                </div>
                            </div>
                            
                        </div>

                        <div class="mb-3">
                            <label for="email">Email <span class="text-muted">(Optional)</span></label>
                            <input type="email" class="form-control" id="email" name="Email">
                            <div class="invalid-feedback">
                                Please enter a valid email address for shipping updates.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="Address" required>
                            <div class="invalid-feedback">
                                Please enter your shipping address.
                            </div>
                        </div>

                        <h4 class="mb-3">Payment</h4>
                        <form action="@Url.Action("VNPayment", "Cart")" method="post">
                            <div class="custom-control custom-radio">
                                <input id="credit" name="PaymentMethod" type="radio" class="custom-control-input" value="VNPAY" checked required>
                                <label class="custom-control-label" for="credit">VNPAY</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="COD" name="PaymentMethod" type="radio" class="custom-control-input" value="COD" required>
                                <label class="custom-control-label" for="COD">COD</label>
                            </div>
                            <hr class="mb-4">
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to payment</button>
                        </form>
                    </div>

                </div>
            </div>
        </section>
    </main>
</body>
@section Scripts {
    <script src="~/js/main.min.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
}