@model IEnumerable<ZestyBiteWebAppSolution.Models.Entities.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableMaintenance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableMaintenance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableNote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservation.ReservationId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TableId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TableId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TableId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
