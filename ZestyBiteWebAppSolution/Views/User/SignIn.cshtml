@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ZestyBiteWebAppSolution.ViewModels
@model SignIn

<link href="~/css/signin.css" rel="stylesheet" />

     <div class="body-center">
        <div class="left-body">
            <div class="form-config">
                <div class="media d-block services form-top">
                    <div class="icon d-flex justify-content-center align-items-center mb-5">
                        <span class="flaticon-pizza-1"></span>
                    </div>
                </div>
                <div class="form-bot">
                    <div style="padding-top: 30px; width: 400px" >
                    <h3 class="mb-8" style="text-align: center; margin-bottom: 2rem !important">Sign In</h3>
                    <form asp-action="SignIn" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-md-flex">
                                <div class="form-group">
                                    <i class="fa fa-user icon"></i>
                                <input asp-for="Username" class="form-control" placeholder="UserName"
                                           >
                                <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-md-flex">
                                <div class="form-group">
                                    <i class="fa fa-key icon"></i>
                                    <input asp-for= "Password" class="form-control" placeholder="Password"  />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input asp-for="RememberMe" class="form-check-input" />
                                        @Html.DisplayNameFor(a => a.RememberMe)
                                    </label>
                                </div>
                                <div>
                                    <a asp-controller="User" asp-action="VerifyEmail" class="text-decoration-none">
                                        Forgot Password?
                                    </a>
                                </div>
                            </div>


                            <div class="form-group n-btn">
                                <input type="submit" value="SignIn" class="btn btn-primary py-3 px-4">
                            </div>

                            <p class="text-center mt-2">
                                Don't have an account ? <a asp-controller="User" asp-action="SignUp" class="text-decoration-none">CREATE AN ACCOUNT!</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="right-body">
            <p class="welcome-text"> Welcome to<br> Zesty Bites™</p>
        </div>
    </div>