@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ZestyBiteWebAppSolution.ViewModels
@model SignUp

<head>
    <link href="~/css/signup.css" rel="stylesheet" />
</head>

<div class="form-config" style="padding-top: 100px">
    <div class="media d-block services" style="width: auto;
        display: flex; align-items: center; justify-content: center;
        padding-top: 25px;">
        <div class="icon d-flex justify-content-center align-items-center mb-5">
            <span class="flaticon-pizza-1"></span>
        </div>
    </div>
    <div class="heading-txt">
        <h3 class="mb-8" style="color: orange; text-align: center; margin-bottom: 2rem !important">CREATE AN ACCOUNT</h3>
    </div>
    <form asp-action="SignUp" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-info" style="display: flex; flex-direction: column; justify-content: space-between; height: 100%;">
            <div class="info-top">
                <div class="info-left">
                    <div class="in-info">
                        <h5>First Name:</h5>
                        <div class="mb-3">
                            <input asp-for="FirstName" style="justify-content: left;
                                    text-align: left;" type="text" class="form-control" placeholder="First Name"
                                    />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="in-info">
                        <h5>Email address:</h5>
                        <div class="mb-3">
                            <input asp-for="Email" style="justify-content: left;
                        text-align: left;" type="email" class="form-control" placeholder="Email"  />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="in-info">
                        <h5>Username:</h5>
                        <div class="mb-3">
                            <input asp-for="Username" style="justify-content: left;
                            text-align: left;" type="text" class="form-control" placeholder="Username"
                                    />
                            <span asp-validation-for="Username" class="text-danger"></span>

                        </div>
                    </div>
                </div>

                <div class="info-right">
                    <div class="in-info">
                        <h5>Last Name:</h5>
                        <div class="mb-3">
                            <input asp-for="LastName" style="justify-content: left;
                            text-align: left;" type="text" class="form-control" placeholder="Last Name"
                                   >
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="in-info">
                        <h5>Gender:</h5>
                        <select style="width: 200px; height: 40px; margin-bottom: 40px; transform: translateY(10px)">
                            <option value="0">Female</option>
                            <option value="1">Male</option>
                            <option value="2">Other</option>
                        </select>
                    </div>

                    <div class="in-info">
                        <h5>Password:</h5>
                        <div class="mb-3">
                            <input asp-for="Password" style="justify-content: left;
                            text-align: left;" type="password" class="form-control" placeholder="Password"
                                   >
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-info" style="text-align: center;" id="submit">
            <input type="submit" value="SignUp" class="btn btn-primary py-3 px-4"
                   style="width: 150px; font-size: 15px;">
        </div>
        <p class="text-center mt-2" style="transform: translateY(5px)">
            Already have an account ? <a asp-controller="User" asp-action="SignIn" class="text-decoration-none">Sign In</a>
        </p>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back to home</a>
        </div>
    </form>
</div>